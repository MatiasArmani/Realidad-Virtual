# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/webapp_3d_ar
DB_HOST=localhost
DB_PORT=5432
DB_NAME=webapp_3d_ar
DB_USER=postgres
DB_PASSWORD=postgres

# Redis
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

